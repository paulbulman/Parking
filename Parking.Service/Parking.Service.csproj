    <PackageReference Include="AWSSDK.S3" Version="3.7.7.18" />
    <PackageReference Include="AWSSDK.SimpleEmail" Version="3.7.0.118" />
    <PackageReference Include="AWSSDK.SimpleNotificationService" Version="3.7.3.18" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="3.1.22" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="3.1.22" />
    <PackageReference Include="NodaTime" Version="3.0.9" />
